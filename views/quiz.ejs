                        <h2 id="question">Question is here</h2>
                        <br>
                        <ul>
                            <li class="mb-3"><button id="answer1" value="0" type="button"
                                    class="btn btn-secondary ansBtn">Answr1</button></li>
                            <li class="mb-3"><button id="answer2" value="1" type="button"
                                    class="btn btn-secondary ansBtn">Answr2</button></li>
                            <li class="mb-3"><button id="answer3" value="2" type="button"
                                    class="btn btn-secondary ansBtn">Answr3</button></li>
                            <li class="mb-3"><button id="answer4" value="3" type="button"
                                    class="btn btn-secondary ansBtn">Answr4</button></li>
                        </ul>
                            <!-- time display -->
                            <div class="col-12">
                            <p class="d-flex justify-content-end time container-fluid h2">Time:75s</p>
                            </div>
                        <div id="result" class="font-italic h2">
                            <hr>
                            
                        </div>
                    </div>
                </div>
                
            </section>

            <!-- Final score section -->
            <section id="final">
                <div class="row">
                    <div class="col-12"></div>
                    <div class="col-12 pl-1 ml-2 mb-3 h2">
                        <p>Your final score is: <span id="score">here</span></p>              
                        <button id="submit-score" class="btn btn-info btn-lg ml-2">Submit</button>
                        <button id="view-scores" type="button" class="btn btn-info btn-lg text-center">View Scores</button>
                                        
                </div>                                
            </section>

            <!-- High Scores section-->
            <section id="highscores">
                <div class="row">                   
                    <div class="col-12">
                            <h2>Scores</h2>                            
                            <ol id="score-list">list</ol>
                            <button id="playagain" class="btn btn-info btn-lg mr-5">Try Again</button>
                            <button id="clearscores" class="btn btn-info btn-lg">Clear scores</button>
                    </div>
                </div>
            </section>           
        </div>
