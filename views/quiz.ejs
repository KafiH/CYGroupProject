    <main>
        <!--Starting-->        
        <div class="container">
            <section id="intro">
                <div class="row">
                    <div class="col-3"></div>
                    <div class="col-6">                        
                        <p class="d-flex justify-content-center text-left">Just click on the green button to start the quiz. Do not forget that every incorrect answer will drop for 5  points and you will get 25 points for each correct answer and you have 75 seconds for 4 questions. GOOD LUCK
                        </p>
                        <button id="start" type="button" class="btn btn-success btn-lg float-lg-right">Start</button>
                        </p>
                    </div>
                </div>
            </section>
            
            <!-- questions and answer section-->
            <section id="questions">
                <div class="row">
                    <div class="col-12"></div>
